{
  "short_name": "SFM",
  "name": "silent-friday-music-extension",
  "version": "0.0.1",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "icons/minion.png",
    "48": "icons/minion.png",
    "128": "icons/minion.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["js/content.js"]
    }
  ],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true

  },
  "permissions": ["webRequest", "<all_urls>", "tabs", "storage"]
}
