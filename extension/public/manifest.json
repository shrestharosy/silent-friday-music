{
  "short_name": "SFM",
  "name": "silent-friday-music-extension",
  "version": "0.0.1",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "minion.png",
    "48": "minion.png",
    "128": "minion.png"
  },
  "background": {
    "scripts": ["scripts/background.ts", "scripts/hotReload.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.ts"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["tabs", "activeTab"],
  "content_security_policy": "script-src 'self' 'sha256-5As4+3YpY62+l38PsxCEkjB1R4YtyktBtRScTJ3fyLU='; object-src 'self'"
}
